{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:android"],
      "outputs": ["../android/build/**"]
    },
    "build:android": {
      "dependsOn": ["^build"],
      "env": ["ANDROID_HOME", "ORG_GRADLE_PROJECT_newArchEnabled"],
      "inputs": [
        "package.json",
        "android",
        "!android/build",
        "src/*.ts",
        "src/*.tsx",
        "examples/rn-bare/package.json",
        "examples/rn-bare/android",
        "!examples/rn-bare/android/.gradle",
        "!examples/rn-bare/android/build",
        "!examples/rn-bare/android/app/build"
      ],
      "outputs": ["../android/build/**"]
    },
    "build:ios": {
      "dependsOn": ["^build"],
      "env": ["RCT_NEW_ARCH_ENABLED"],
      "inputs": [
        "package.json",
        "*.podspec",
        "ios",
        "src/*.ts",
        "src/*.tsx",
        "examples/rn-bare/package.json",
        "examples/rn-bare/ios",
        "!examples/rn-bare/ios/build",
        "!examples/rn-bare/ios/Pods"
      ],
      "outputs": []
    }
  }
}
