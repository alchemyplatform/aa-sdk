{
  "name": "root",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.16"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": {
    "packages": [
      "templates/*",
      "doc-gen",
      "docs",
      ".vitest",
      "halp",
      "packages/*"
    ]
  },
  "resolutions": {
    "wagmi": "2.16.9",
    "viem": "^2.45.0",
    "@noble/hashes": "^1.4.0",
    "@noble/curves": "^1.4.0",
    "eslint-plugin-react-hooks": "4.6.0"
  },
  "scripts": {
    "generate": "turbo run generate",
    "postgenerate": "yarn lint:write",
    "preinstall": "yarn config set ignore-engines true",
    "postinstall": "patch-package && turbo run build --filter='./templates/*' --filter='halp'",
    "build": "yarn build:libs",
    "postbuild": "yarn lint:write",
    "build:libs": "turbo run build --filter='./templates/*' --filter='./packages/*'",
    "clean": "yarn clean:turbo && yarn clean:node_modules",
    "clean:turbo": "turbo run clean",
    "clean:node_modules": "lerna clean -y && rm -rf node_modules",
    "test": "vitest dev",
    "test:ci": "vitest run",
    "test:typecheck": "TYPECHECK=true vitest --typecheck --typecheck.only run",
    "lint:write": "eslint . --fix && prettier --log-level warn --write --ignore-unknown .",
    "lint:check": "eslint . && prettier --check .",
    "prepare": "husky install",
    "docs:sdk": "yarn build && typedoc && tsx scripts/generate-typedoc-yaml.ts",
    "version": "yarn build:libs"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@tanstack/react-query": "^5.28.9",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "add": "^2.0.6",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.51.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-formatter-github": "1.1.4",
    "eslint-formatter-rdjson": "^1.0.6",
    "eslint-plugin-eslint-rules": "*",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^48.2.3",
    "eslint-plugin-mdx": "^3.1.5",
    "halp": "*",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "jiti": "^2.4.2",
    "js-yaml": "^4.1.0",
    "jsdom": "^25.0.1",
    "lerna": "^8.0.2",
    "lint-staged": "^13.2.2",
    "markdownlint": "^0.38.0",
    "mdx2vast": "^0.3.0",
    "node-fetch": "^3.3.1",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "3.3.3",
    "prool": "^0.0.15",
    "remark-mdx": "^3.1.1",
    "tsx": "^4.20.5",
    "turbo": "^2.2.3",
    "typedoc": "^0.28.13",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "^4.8.1",
    "typedoc-plugin-remark": "^2.0.1",
    "typescript": "^5.8.3",
    "viem": "^2.45.0",
    "vitest": "^2.1.9",
    "wagmi": "2.16.9",
    "webauthn-p256": "^0.0.10"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "is-ci || lint-staged",
      "commit-msg": "npx --no -- commitlint --edit ${1}"
    }
  },
  "lint-staged": {
    "**/*.{mdx,js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "**/*.{yaml,yml}": [
      "prettier --write"
    ]
  }
}
