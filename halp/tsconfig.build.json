{
  "extends": "typescript-template/build.json",
  "exclude": [
    "node_modules",
    "**/*/__tests__",
    "**/*/*.test.ts",
    "**/*/*.test-d.ts",
    "**/*/*.e2e.test.ts",
    "vitest.config.ts",
    "vitest.config.e2e.ts"
  ],
  "include": ["src"],
  "compilerOptions": {
    "sourceMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  }
}
