{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["^build"]
    },
    "docs:gen": {
      "outputs": ["../../site/pages/reference/**"]
    },
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["src/**/plugins/**"],
      "cache": true
    }
  }
}
